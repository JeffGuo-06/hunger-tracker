{
    "family": "muckd-web",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "muckd-web",
            "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/muckd:latest-amd64",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DJANGO_SETTINGS_MODULE",
                    "value": "muckd.settings.production"
                },
                {
                    "name": "AWS_STORAGE_BUCKET_NAME",
                    "value": "mucked-media"
                },
                { "name": "SECRET_KEY", "value": "django-insecure-+7#mvf$@#g=zi^v(2n0+z6!4mz-xuscxise1m=nw24-&6q+p@^" },
                { "name": "DB_NAME", "value": "muckd-db" },
                { "name": "DB_USER", "value": "postgres" },
                { "name": "DB_PASSWORD", "value": "Hudson1967!$" },
                { "name": "DB_HOST", "value": "muckd-db.cd0iyg2q8wyj.us-east-2.rds.amazonaws.com" },
                { "name": "DB_PORT", "value": "5432" },
                { "name": "REDIS_URL", "value": "muckd-redis.4ikzba.0001.use2.cache.amazonaws.com" },
                { "name": "AWS_ACCESS_KEY_ID", "value": "AKIAZRUR2QNX54ETVJUT" },
                { "name": "AWS_SECRET_ACCESS_KEY", "value": "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" }
            ],
            "healthCheck": {
                "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/ || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/muckd-web",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
} 


